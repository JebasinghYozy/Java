pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'git', url: 'https://github.com/yozytechnologiesllp/devops-java.git']])
            }
        }
        
        stage('git clone') {
            steps {
                git branch: 'main', credentialsId: 'git', url: 'https://github.com/yozytechnologiesllp/devops-java.git'
            }
        }
        
        stage('maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat_d', path: '', url: 'http://127.0.0.1:9009/')], contextPath: null, war: '**/*.war'
            }
        }
    }
}
